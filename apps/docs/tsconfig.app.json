	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "../../dist/out-tsc",
		"types": [
      "node"
    ]
	},
	"files": [
    "src/main.ts",
    "src/main.server.ts",
    "server.ts"
